<Window x:Class="MyShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShop"
        mc:Ignorable="d"
        Title="Main" Height="480" Width="640" ResizeMode="NoResize">
    <TabControl>
        <TabItem Header="Dashboard" FontSize="20"></TabItem>
        <TabItem Header="Chức năng" FontSize="20"></TabItem>
        <TabItem Header="Dữ liệu" FontSize="20">
            <Canvas>
                <TextBlock Text="Import dữ liệu ban đầu từ file Access" HorizontalAlignment="Left" VerticalAlignment="Center" Width="386" Canvas.Left="189" Canvas.Top="81"></TextBlock>
                <Button Name="buttonImport" Click="buttonImport_Click" Height="35" Width="80" Content="Import" Canvas.Left="95" Canvas.Top="77"></Button>
                <Button Name="buttonBackup" Click="buttonBackup_Click" Height="35" Width="80" Content="Backup" Canvas.Left="95" Canvas.Top="143" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBlock Text="Backup database" Width="386" Canvas.Left="189" Canvas.Top="147" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Canvas>
        </TabItem>
    </TabControl>
</Window>
